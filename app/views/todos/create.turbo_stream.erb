<%= turbo_stream.update Todo.new, '' %>

 

<%# Step 2: add the date at the right place %>
<% if previous_todo = @todo.previous_todo %>
  <%= turbo_stream.after previous_todo do %>
    <%= render @todo, task: @task %>
  <% end %>
<% else %>
  <%= turbo_stream.prepend "todos" do %>
    <%= render @todo, task: @task %>
  <% end %>
<% end %>


