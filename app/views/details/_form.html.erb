<%= simple_form_for [task, todo, detail],
                    html: { class: "form detail detail--form" } do |f| %>

  <%= form_error_notification(detail) %>

  <%= f.input :name,
              wrapper_html: { class: "detail__name" },
              input_html: { autofocus: true } %>

  <%= f.input :description,
              wrapper_html: { class: "detail__description" } %>

    <%= f.input :time,
      wrapper_html: { class: "detail__time" },
      collection: [['00:05', 5],
                  ['00:15', 15],
                  ['00:30', 30],
                  ['00:45', 45],
                  ['01:00', 60],
                  ['01:15', 75],
                  ['01:30', 90],
                  ['01:45', 105],
                  ['02:00', 120],
                  ['03:00', 180],
                  ['04:00', 240],
                  ['05:00', 300]]
    %>

  <div class="detail__actions">
    <%= link_to "Cancel", task_path(task), class: "btn btn--light" %>
    <%= f.submit class: "btn btn--secondary" %>
  </div>
<% end %>