<%= turbo_stream.update nested_dom_id(@todo, Detail.new), "" %>

<%= turbo_stream.append nested_dom_id(@todo, "details") do %>
  <%= render @detail, task: @task, todo: @todo %>
<% end %>

<%= render_turbo_stream_flash_messages %>

<%= turbo_stream.update dom_id(@task, :total) do %>
  <%= render 'tasks/total', task: @task %>
<% end %>