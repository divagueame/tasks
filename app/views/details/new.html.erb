<main class="container">
 <%= link_to sanitize("&larr; Back to task"), task_path(@task) %>

  <div class="header">
    <h1>New item for <%= @todo.name %></h1>
  </div>
  <%= turbo_frame_tag nested_dom_id(@todo, Detail.new) do %>
    <%= render "form",
              task: @task,
              todo: @todo,
              detail: @detail %>
  <% end %>
</main>