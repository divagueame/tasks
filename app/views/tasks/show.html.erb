
<main class="container mb-xxxxl">
  <%= link_to sanitize("&larr; Back to tasks"), tasks_path %>
  <div class="header">
    <h1>
      <%= @task.name %>
    </h1>
    <%= link_to 'New todo',
      new_task_todo_path(@task),
      data: {turbo_frame: dom_id(Todo.new)},
      class: "btn btn-primary"
    %>
  </div>
  <%= turbo_frame_tag Todo.new %>
  <%= turbo_frame_tag 'todos' do %>
    <%= render @todos, task: @task %>
  <% end %>
</main>
<%= turbo_frame_tag dom_id(@task, :total) do %>
  <%= render 'tasks/total', task: @task %>
<% end %>